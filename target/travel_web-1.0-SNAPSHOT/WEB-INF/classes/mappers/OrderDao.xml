<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyx.dao.OrderDao">
    <resultMap id="orderResultMap" type="com.cyx.entity.Order">
        <id property="id" column="id"/>
        <result property="orderNum" column="orderNum"/>
        <result property="orderTime" column="orderTime"/>
        <result property="orderStatus" column="orderStatus"/>
        <result property="travelerCount" column="travelerCount"/>
        <result property="payType" column="payType"/>
        <result property="orderDesc" column="orderDesc"/>
        <association property="product" column="productId" select="findProduct"/>
    </resultMap>

    <select id="findAll" resultMap="orderResultMap">
        select * from `order`
    </select>

    <select id="findProduct" resultType="product">
        select * from product where id=#{productId}
    </select>
</mapper>
